<h2 class="header-title">
  <a href="/">ざっくり経営ナビ</a>
</h2>

<nav>
  <% if user_signed_in? %>
    <ul class="header-buttons logged-in-menu">
      <li class="user-menu">
        <a href="#" class="user-menu-button"><%= current_user.username %> ▼</a>
        <ul class="dropdown-menu">
          <li><%= link_to 'マイページ', user_path(current_user) %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %></li>
        </ul>
      </li>
    </ul>
  <% else %>
    <ul class="header-buttons">
      <li><%= link_to '新規登録', new_user_registration_path %></li>
      <li><%= link_to 'ログイン', new_user_session_path %></li>
      <li>
        <%= button_to 'ゲストログイン', users_guest_sign_in_path,
          method: :post,
          class: 'nav-btn'
        %>
      </li>
      </ul>
  <% end %>  
</nav>

